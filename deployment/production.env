# CPQ系统生产环境配置文件
# 复制到服务器: /www/wwwroot/cpqh.d1bbk.com/.env

# Flask环境配置
FLASK_ENV=production
DEBUG=False

# 安全密钥 (生产环境必须修改)
SECRET_KEY=your-super-secret-production-key-here
JWT_SECRET_KEY=your-jwt-secret-production-key-here

# 数据库配置 (MySQL)
DATABASE_URL=mysql+pymysql://cpq_user:your_password@localhost:3306/cpq_production

# 服务器配置
HOST=0.0.0.0
PORT=5000

# CORS配置 (允许前端域名)
CORS_ORIGINS=http://cpq.d1bk.com,https://cpq.d1bk.com

# API配置
API_PREFIX=/api/v1

# 文件上传配置
UPLOAD_FOLDER=/www/wwwroot/cpqh.d1bbk.com/instance/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# OpenAI API配置 (如果使用AI功能)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/www/wwwroot/cpqh.d1bbk.com/logs/app.log

# 性能监控
ENABLE_PERFORMANCE_MONITORING=True
PERFORMANCE_LOG_FILE=/www/wwwroot/cpqh.d1bbk.com/logs/performance.log

# Redis配置 (可选)
# REDIS_URL=redis://localhost:6379/0

# 邮件配置 (用于通知)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-email-password
# MAIL_USE_TLS=True