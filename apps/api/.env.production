# CPQ系统后端生产环境配置
# 更新时间：2025-08-25

# Flask环境配置
FLASK_ENV=production
DEBUG=False

# 数据库配置
DATABASE_URL=mysql+pymysql://cpq_user:cpq_password@localhost/cpq_system

# JWT配置
JWT_SECRET_KEY=cpq_production_jwt_secret_key_2025
JWT_ACCESS_TOKEN_EXPIRES=24

# API配置
API_PREFIX=/api/v1
HOST=127.0.0.1
PORT=5000

# CORS配置 - 支持生产和本地开发
CORS_ORIGINS=http://cpq.100yse.com,http://localhost:5173

# 服务器配置
GUNICORN_WORKERS=4
GUNICORN_BIND=127.0.0.1:5000

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/www/wwwroot/cpq/api/logs/app.log

# 文件上传配置
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/www/wwwroot/cpq/api/instance/uploads

# 安全配置
SECRET_KEY=cpq_production_secret_key_2025_secure