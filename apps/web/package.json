{
  "name": "cpq-web",
  "version": "1.2.0",
  "description": "CPQ System Frontend - Professional Configure, Price, Quote Management Platform",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:prod": "vue-tsc && vite build --config vite.config.prod.ts",
    "build:prod-skip-check": "vite build --config vite.config.prod.ts",
    "build:analyze": "vue-tsc && ANALYZE=true vite build --config vite.config.prod.ts",
    "preview": "vite preview",
    "preview:prod": "vite preview --config vite.config.prod.ts",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@heroicons/vue": "^2.2.0",
    "@pdf-lib/fontkit": "^1.1.1",
    "@vueuse/core": "^10.11.0",
    "axios": "^1.7.2",
    "browser-image-compression": "^2.0.2",
    "echarts": "^6.0.0",
    "element-plus": "^2.7.6",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "pdf-lib": "^1.17.1",
    "pinia": "^2.1.7",
    "sortablejs": "^1.15.6",
    "vue": "^3.4.31",
    "vue-i18n": "^9.13.1",
    "vue-router": "^4.3.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.26.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^24.1.0",
    "msw": "^2.3.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass-embedded": "^1.90.0",
    "terser": "^5.43.1",
    "typescript": "~5.4.5",
    "unplugin-auto-import": "^0.17.6",
    "unplugin-vue-components": "^0.27.0",
    "vite": "^7.1.3",
    "vite-plugin-compression2": "^2.2.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.0.22"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lsaac1208/cpq-system.git"
  },
  "keywords": [
    "cpq",
    "configure-price-quote",
    "vue3",
    "typescript",
    "element-plus",
    "business-management",
    "ai-analysis"
  ],
  "author": "lsaac1208",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lsaac1208/cpq-system/issues"
  },
  "homepage": "https://github.com/lsaac1208/cpq-system#readme"
}
